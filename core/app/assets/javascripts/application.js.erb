<% ::Refinery::Core.javascripts.each do |js| %>
<%= require_asset js %>
<% end %>

$(function () {
  $(document).on('ajax:success', function (event, response, status, xhr) {
    if (typeof response === 'object') {
      event.preventDefault();
      refinery.xhr.success(response, status, xhr, $('#page'));
    }
  });
});
