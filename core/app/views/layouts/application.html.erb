<% site_bar = render '/refinery/site_bar' if refinery_user? %>
<% cache refinery_record_cache_key(@page, 'head') do -%>
<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <head>
    <%= render 'refinery/head' %>
  </head>
<% end %>
  <body id="<%= canonical_id @page %>">
    <%= site_bar %>
    <div id="page-container">
      <div class="header-container">
        <header id="header" class="wrapper clearfix">
          <% cache refinery_record_cache_key(@page, 'header') do -%>
            <%= render '/refinery/header' %>
          <% end %>
        </header>
      </div>

      <div class="main-container">
        <div id="main" class="wrapper clearfix">
          <%= yield %>
        </div>
      </div>

<% cache refinery_record_cache_key(@page, 'footer') do -%>
      <div class="footer-container">
        <footer id="footer" class="wrapper clearfix">
          <%= render '/refinery/footer' %>
        </footer>
      </div>
    </div>
    <%= render '/refinery/javascripts' %>
  </body>
</html>
<% end %>
