<meta charset="<%= ::Rails.application.config.encoding %>" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta refinerycms="<%= Refinery.version %>" />
<%= yield :meta %>
<title><%= Refinery::Core.site_name %> - Refinery</title>
<%= csrf_meta_tags %>

<%= stylesheet_link_tag 'refinery/application' %>
<%= stylesheet_link_tag 'refinery/flags' if Refinery::I18n.frontend_locales.many? %>
<% ::Refinery::Core.stylesheets.each do |css| %>
  <%= stylesheet_link_tag css.path, css.options %>
<% end %>

<%= javascript_include_tag 'modernizr-min', data: { :'turbolinks-eval' => false } %>
<%= javascript_include_tag 'refinery/admin/application',
            defer: true,
            async: true,
            data: { :'turbolinks-eval' => false } %>
