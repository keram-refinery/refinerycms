<meta charset="<%= ::Rails.application.config.encoding %>" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta refinerycms="<%= Refinery.version %>" />
<%= yield :meta %>
<title><%= Refinery::Core.site_name %> - Refinery</title>
<%= csrf_meta_tags %>

<%= stylesheet_link_tag 'refinery/application' %>
<% ::Refinery::Core.admin_stylesheets.each do |css| %>
  <%= stylesheet_link_tag css.path, css.options %>
<% end %>

<%= javascript_include_tag 'modernizr-min', 'vendor/i18n', data: { :'turbolinks-eval' => false } %>
<% refinery_admin_i18n_js = ::Refinery::Core.admin_I18n_javascripts[::I18n.locale] ||
            ::Refinery::Core.admin_I18n_javascripts[Refinery::I18n.default_locale] %>
<%= javascript_include_tag *refinery_admin_i18n_js,
            # cache: true,
            data: { :'turbolinks-eval' => false } unless refinery_admin_i18n_js.nil? %>
<%= javascript_include_tag 'refinery/application',
            defer: !Rails.configuration.assets.debug,
            async: !Rails.configuration.assets.debug,
            data: { :'turbolinks-eval' => false } %>
