<div id="locales">
<% Refinery::I18n.frontend_locales.each do |locale| %>
  <% if Globalize.locale != locale %>
    <% url = if @page.translated_locales.include?(locale)
                url_for_page_with_locale(locale)
              else
                refinery.root_path locale: locale
              end
    %>
    <%= link_to url do %>
      <span class="<%= locale %>"><%= Refinery::I18n.locales[locale] || locale %></span>
    <% end %>
  <% else %>
    <span class="<%= locale %>"><%= Refinery::I18n.locales[locale] || locale %></span>
  <% end -%>
<% end -%>
</div>
