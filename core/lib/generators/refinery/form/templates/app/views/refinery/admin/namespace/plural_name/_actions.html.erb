                class: 'icon-small icon-with-text spam-icon' do %>
      <%%= t('.spam') -%>
      <i class="items-count" ><%%= "(#{spam_count})" if spam_count > 0 -%></i>
    <%% end %>
  </li><% end %>
  <li>
    <%%= link_to t('.update_notified'),
                  refinery.edit_admin_<%= namespacing.underscore %>_setting_path(:notification_email_recipients),
                  class: 'icon-small icon-with-text setting-edit-icon' %>
  </li>
  <li>
    <%%= link_to t('.edit_confirmation_email'),
                refinery.edit_admin_<%= namespacing.underscore %>_setting_path(:confirmation_email),
                class: 'icon-small icon-with-text setting-edit-icon' %>
  </li>
