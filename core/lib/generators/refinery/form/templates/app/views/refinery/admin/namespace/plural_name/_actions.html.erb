<ul>
  <li <%%= 'class="selected"'.html_safe if action_name == 'index' %>>
    <%%= link_to refinery.admin_<%= namespacing.underscore %>_<%= plural_name %>_path,
                class: 'icon-small icon-with-text email-icon' do %>
      <%%= t('.inbox') %>
