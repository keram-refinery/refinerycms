plugin = Refinery::Plugins['<%= plural_name -%>']
if plugin

  if defined?(Refinery::User)
    Refinery::User.all.each do |user|
      if user.plugins.find_by(name: plugin.name).nil?
        user.plugins.create(:name => plugin.name,
                            :position => (user.plugins.maximum(:position) || -1) +1)
      end
    end
  end

  if defined?(Refinery::Page) && plugin.page.blank?
    page = Refinery::Page.create(
      :title => '<%= class_name.pluralize.underscore.titleize %>',
      :plugin_page_id => plugin.name,
      :deletable => false
    )

    thank_you_page = page.children.create(
      :title => 'Thank You',
      :plugin_page_id => '<%= plural_name -%>_thank_you',
      :deletable => false,
      :show_in_menu => false
    )

    Refinery::Pages.default_parts.each do |default_page_part|
      page.parts.create(:title => default_page_part, :body => nil)
      thank_you_page.parts.create(:title => default_page_part, :body => nil)
    end

    Globalize.with_locales ::Refinery::I18n.default_frontend_locale do
      page.save
      thank_you_page.save
    end
  end
end
