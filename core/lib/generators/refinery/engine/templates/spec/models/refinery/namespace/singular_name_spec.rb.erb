require 'spec_helper'

module Refinery
  module <%= namespacing %>
    describe <%= class_name %> do
      describe 'validations' do
        subject do
          FactoryGirl.create(:<%= singular_name %><% if title_attribute.present? %>,
          <%= title_attribute_name %>: 'Refinery CMS'<% end %>)
        end

        it { should be_valid }
        its(:errors) { should be_empty }
<% if title_attribute.present? %>
        its(:<%= title_attribute_name %>) { should == 'Refinery CMS' }
<% end %>
      end
    end
  end
end
