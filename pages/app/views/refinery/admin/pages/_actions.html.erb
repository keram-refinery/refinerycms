<ul>
  <li>
    <%= link_to t('.create_new_page'), refinery.new_admin_page_path,
                class: 'icon-small icon-with-text add-icon' %>
  </li>
</ul>

<% if Refinery::I18n.frontend_locales.many? %>
<ul>
  <% Refinery::I18n.frontend_locales.each do |locale| %>
    <li <%= 'class="active"'.html_safe if Globalize.locale == locale %>>
      <%= link_to t("lang_#{locale}", scope:'refinery'),
                  refinery.admin_pages_url(frontend_locale: locale),
                  class: "icon-small icon-with-text flag-#{locale}" %>
    </li>
  <% end -%>
</ul>
<% end %>
